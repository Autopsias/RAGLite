# RAGLite Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# QDRANT VECTOR DATABASE
# ============================================================================
# Qdrant connection settings (Docker Compose default: localhost:6333)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=financial_docs

# ============================================================================
# ANTHROPIC CLAUDE API
# ============================================================================
# Required for answer synthesis (Story 1.11+)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# MISTRAL API
# ============================================================================
# Required for metadata extraction (Story 2.4+, Story 2.6)
# Get your FREE API key from: https://console.mistral.ai/
# Mistral Small: FREE tier, 91% accuracy, native JSON schema support
MISTRAL_API_KEY=your_mistral_api_key_here

# Optional: Override Mistral model for metadata extraction
# Default: mistral-small-latest (FREE tier, optimized for metadata extraction)
# METADATA_EXTRACTION_MODEL=mistral-small-latest

# ============================================================================
# POSTGRESQL DATABASE (Story 2.6)
# ============================================================================
# PostgreSQL connection settings for structured metadata storage (Phase 2B)
# Docker Compose default: localhost:5432
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=raglite
POSTGRES_USER=raglite
POSTGRES_PASSWORD=raglite

# ============================================================================
# EMBEDDING MODEL CONFIGURATION
# ============================================================================
# Fin-E5 financial domain embeddings
EMBEDDING_MODEL=intfloat/e5-large-v2
EMBEDDING_DIMENSION=1024

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================
# MCP server port (for local testing - Phase 1)
MCP_SERVER_PORT=8000

# ============================================================================
# PHASE 4 (PRODUCTION) - COMMENTED OUT FOR NOW
# ============================================================================
# Uncomment and configure when deploying to AWS in Phase 4

# AWS Configuration
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
